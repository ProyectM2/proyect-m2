<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>

              <form method="POST" action="/register">

                <div class="form-outline mb-4 input-group">
                  <span class="input-group-text"><i class="fa fa-fw fa-user"></i></span>
                  <input type="text" name="name" id="form3Example1cg" class="form-control form-control-lg {{#if errors.name}}is-invalid{{/if}}" placeholder="Name" aria-label="Name" value="{{ user.name }}">
            {{#if errors.name}}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
                </div>

                <div class="form-outline mb-4 input-group">
                  <span class="input-group-text"><i class="fa fa-fw fa-user"></i></span>
                  <input type="text" name="surname" id="form3Example1cg" class="form-control form-control-lg {{#if errors.name}}is-invalid{{/if}}" placeholder="Surname" aria-label="Surname" value="{{ user.surname }}">
            {{#if errors.surname}}<div class="invalid-feedback">{{ errors.surname }}</div>{{/if}}
                </div>

                <div class="form-outline mb-4 input-group">
                  <span class="input-group-text"><i class="fa fa-fw fa-phone"></i></span>
                  <input type="text" name="phonenum" id="form3Example1cg" class="form-control form-control-lg {{#if errors.phonenum}}is-invalid{{/if}}" placeholder="Phone Number" aria-label="Phone Number" value="{{ user.phonenum }}">
            {{#if errors.phonenum}}<div class="invalid-feedback">{{ errors.phonenum}}</div>{{/if}}
                </div>

                <div class="form-outline mb-4 input-group">
                  <span class="input-group-text"><i class="fa fa-fw fa-envelope"></i></span>
                  <input type="email" name="email" id="form3Example3cg" class="form-control form-control-lg {{#if errors.email}}is-invalid{{/if}}" placeholder="Email" aria-label="Email" value="{{ user.email }}">
            {{#if errors.email}}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
                </div>

                <div class="form-outline mb-4 input-group">
                  <span class="input-group-text"><i class="fa fa-fw fa-lock"></i></span>
                  <input type="password" name="password" id="form3Example4cg" class="form-control form-control-lg {{#if errors.password}}is-invalid{{/if}}" placeholder="Password" aria-label="Password" value="{{ user.password }}">
            {{#if errors.password}}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
                </div>

                <div class="d-flex justify-content-center">
                  <button type="submit"
                    class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/login"
                    class="fw-bold text-body"><u>Login here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>